<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hd_background_portrait_yellow"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gndec.campusconnect.student">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="27dp"
                android:layout_row="0"
                android:background="#00ffffff"
                android:src="@drawable/attendance_110_64_with_text" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginRight="27dp"
                android:layout_row="0"
                android:background="#00ffffff"
                android:src="@drawable/sessional_110_64_with_text" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="27dp"
                android:layout_row="2"
                android:background="#00ffffff"
                android:src="@drawable/events_110_64_with_text" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="27dp"
                android:layout_row="1"
                android:background="#00ffffff"
                android:src="@drawable/result_110_64_with_text" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginRight="27dp"
                android:layout_row="1"
                android:background="#00ffffff"
                android:src="@drawable/profile_110_64_with_text" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="27dp"
                android:layout_column="4"
                android:layout_row="2"
                android:background="#00ffffff"
                android:src="@drawable/logout_110_64_with_text" />


        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name  :"
            android:textColor="#266a2e"
            android:paddingTop="40dp"
            android:id="@+id/textView70"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView71"
            android:layout_toStartOf="@+id/textView71" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="40dp"
            android:text="Medium Text"
            android:textColor="#266a2e"
            android:textSize="15dp"
            android:paddingRight="0dp"
            android:id="@+id/textView71"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_alignEnd="@+id/textView70"
            android:layout_alignRight="@+id/textView70"
            android:layout_alignBottom="@+id/textView73"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Roll_no:"
            android:textColor="#266a2e"
            android:id="@+id/textView72"
            android:paddingRight="0dp"
            android:textSize="15dp"
            android:paddingTop="30dp"
            android:layout_below="@+id/textView70"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingRight="0dp"
            android:paddingTop="30dp"
            android:textColor="#266a2e"
            android:textSize="15dp"
            android:text="medium text"
            android:id="@+id/textView73"
            android:gravity="left"
            android:layout_below="@+id/textView71"
            android:layout_toRightOf="@+id/textView72"
             />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton8"
            android:background="#00ffffff"
            android:src="@drawable/icon1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hd_background_portrait_yellow"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.gndec.campusconnect.student">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="30dp"
                android:layout_row="0"
                android:background="#00ffffff"
                android:src="@drawable/attendance_text_160" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginRight="30dp"
                android:layout_row="0"
                android:background="#00ffffff"
                android:src="@drawable/sessional_txt_160" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="30dp"
                android:layout_row="2"
                android:background="#00ffffff"
                android:src="@drawable/events_text_160" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="30dp"
                android:layout_row="1"
                android:background="#00ffffff"
                android:src="@drawable/result_160" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginRight="30dp"
                android:layout_row="1"
                android:background="#00ffffff"
                android:src="@drawable/profile_txt_160" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_column="4"
                android:layout_row="2"
                android:background="#00ffffff"
                android:src="@drawable/logout_txt_160" />


        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name  :"
            android:textStyle="bold"
            android:paddingTop="50dp"
            android:id="@+id/textView70"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageButton8"
            android:layout_toEndOf="@+id/imageButton8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="50dp"
            android:text="Medium Text"
            android:textSize="25dp"
            android:id="@+id/textView71"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView72"
            android:layout_toEndOf="@+id/textView72" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Roll_no:"
            android:textStyle="bold"
            android:id="@+id/textView72"
            android:textSize="25dp"
            android:paddingTop="20dp"
            android:layout_below="@+id/textView70"
            android:layout_alignLeft="@+id/textView70"
            android:layout_alignStart="@+id/textView70" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="20dp"
            android:textSize="25dp"
            android:text="medium text"
            android:id="@+id/textView73"
            android:layout_below="@+id/textView71"
            android:layout_alignLeft="@+id/textView71"
            android:layout_alignStart="@+id/textView71"
             />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton8"
            android:background="#00ffffff"
            android:layout_marginLeft="30dp"
            android:src="@drawable/user150"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</RelativeLayout>
